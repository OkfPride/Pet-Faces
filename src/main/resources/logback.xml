<?xml version = "1.0" encoding = "UTF-8"?>
<configuration>
    <property name="LOG_PATH" value="logs" />
    <property name="LOG_ARCHIVE" value="${LOG_PATH}/archive" />
    
    <appender name = "STDOUT" class = "ch.qos.logback.core.ConsoleAppender" >
        <encoder>
            <pattern>[%d{yyyy-MM-dd' Time:'HH:mm:ss.sss'Z'}] %highlight(%-5level) --- [%C] [%t] [%logger{40}]  %msg%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>info</level>
        </filter>
    </appender>
    
   
<!--        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>WARN</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>-->
    <appender name = "FILE" class = "ch.qos.logback.core.FileAppender">
        <File>./${LOG_PATH}/logback.log</File>
        <encoder>
            <pattern>[%d{yyyy-MM-dd'T'HH:mm:ss.sss'Z'}] [%C] [%t] [%L] [%-5p] %m%n</pattern>
        </encoder>
    </appender>
    
    <appender name = "FILE2" class = "ch.qos.logback.core.FileAppender" level = "ERROR">
        <File>./logging/logbacktest2.log</File>
        <encoder>
            <pattern>[%d{yyyy-MM-dd'T'HH:mm:ss.sss'Z'}] [%C] [%t] [%L] [%-0p] %m%n</pattern>
        </encoder>
    </appender>
    <appender name="RollingFile-Appender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/rollingfile.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_ARCHIVE}/rollingfile.log%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1KB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>
   
    <root level = "Debug">
        <appender-ref ref = "RollingFile-Appender"/>
        <appender-ref ref = "FILE"/>
        <appender-ref ref = "FILE2"/>
        <appender-ref ref = "STDOUT"/> 
    </root>
</configuration>
